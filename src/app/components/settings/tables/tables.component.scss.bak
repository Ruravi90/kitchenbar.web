/* Search Input Group */
::ng-deep .p-inputgroup {
  .p-inputtext {
    background: rgba(255, 255, 255, 0.1) !important;
    border: 1px solid rgba(255, 255, 255, 0.2) !important;
    color: #fff !important;

    &::placeholder {
      color: rgba(255, 255, 255, 0.6);
    }

    &:focus {
      background: rgba(255, 255, 255, 0.15) !important;
      border-color: var(--primary-300) !important;
    }
  }

  .p-inputgroup-addon {
    background: rgba(255, 255, 255, 0.08) !important;
    border: 1px solid rgba(255, 255, 255, 0.2) !important;
    color: rgba(255, 255, 255, 0.9) !important;
  }
}

/* Table Styles */
::ng-deep .p-datatable {
  .p-datatable-thead > tr > th {
    background: rgba(255, 255, 255, 0.08) !important;
    border: 1px solid rgba(255, 255, 255, 0.1) !important;
    color: #fff !important;
    font-weight: 700;
    padding: 1rem !important;
  }

  .p-datatable-tbody > tr {
    background: rgba(255, 255, 255, 0.03) !important;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05) !important;
    color: rgba(255, 255, 255, 0.95) !important;
    transition: all 0.2s ease;

    &:hover {
      background: rgba(255, 255, 255, 0.08) !important;
    }

    > td {
      border: none !important;
      padding: 1rem !important;
      color: rgba(255, 255, 255, 0.95) !important;
    }
  }

  .p-paginator {
    background: rgba(255, 255, 255, 0.05) !important;
    border: none !important;
    color: #ffffff !important;

    // Paginator text and icons
    .p-paginator-current,
    .p-paginator-icon {
      color: #ffffff !important;
    }

    .p-paginator-pages .p-paginator-page {
      color: #ffffff !important;
      background: transparent;
      min-width: 2.5rem;
      height: 2.5rem;
      border-radius: 50%;

      &.p-highlight {
        background: var(--primary-500) !important;
        color: #fff !important;
        font-weight: 700;
      }

      &:hover:not(.p-highlight) {
        background: rgba(255, 255, 255, 0.15) !important;
      }
    }

    // First, prev, next, last buttons
    .p-paginator-first,
    .p-paginator-prev,
    .p-paginator-next,
    .p-paginator-last {
      color: #ffffff !important;
      
      &:hover:not(:disabled) {
        background: rgba(255, 255, 255, 0.1) !important;
      }
      
      &:disabled {
        opacity: 0.4;
      }
    }

    .p-dropdown {
      background: rgba(255, 255, 255, 0.08) !important;
      border-color: rgba(255, 255, 255, 0.2) !important;
      color: #fff !important;
      
      .p-dropdown-label {
        color: #ffffff !important;
      }
    }
  }
}

/* Dialog Styles - Enhanced Glass */
::ng-deep .p-dialog {
  background: linear-gradient(
    135deg,
    rgba(255, 255, 255, 0.15) 0%,
    rgba(255, 255, 255, 0.08) 100%
  ) !important;
  backdrop-filter: blur(30px) saturate(200%);
  -webkit-backdrop-filter: blur(30px) saturate(200%);
  border: 2px solid rgba(255, 255, 255, 0.3) !important;
  border-radius: 24px !important;
  box-shadow: 
    0 20px 60px 0 rgba(0, 0, 0, 0.5),
    inset 0 1px 0 0 rgba(255, 255, 255, 0.4),
    0 0 60px rgba(120, 119, 198, 0.3) !important;

  .p-dialog-header {
    background: transparent !important;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1) !important;
    color: #fff !important;
    padding: 1.5rem !important;

    .p-dialog-title {
      font-weight: 800;
      font-size: 1.25rem;
    }
  }

  .p-dialog-content {
    background: transparent !important;
    color: rgba(255, 255, 255, 0.95) !important;

    label {
      color: rgba(255, 255, 255, 0.9);
      font-weight: 600;
      font-size: 0.875rem;
      margin-bottom: 0.5rem;
      display: block;
    }

    input,
    textarea,
    .p-dropdown,
    .p-password {
      background: rgba(255, 255, 255, 0.1) !important;
      border: 1px solid rgba(255, 255, 255, 0.2) !important;
      color: #fff !important;

      &:hover {
        background: rgba(255, 255, 255, 0.15) !important;
        border-color: rgba(255, 255, 255, 0.3) !important;
      }

      &:focus {
        background: rgba(255, 255, 255, 0.18) !important;
        border-color: var(--primary-300) !important;
        box-shadow: 0 0 0 3px rgba(33, 150, 243, 0.1);
      }
    }

    ::ng-deep .p-dropdown-label,
    ::ng-deep .p-inputtext {
      color: #fff !important;
    }

    ::ng-deep .p-dropdown-trigger {
      color: rgba(255, 255, 255, 0.7);
    }

    .p-inputgroup-addon {
      background: rgba(255, 255, 255, 0.08) !important;
      border: 1px solid rgba(255, 255, 255, 0.2) !important;
      color: rgba(255, 255, 255, 0.9) !important;
    }
  }

  .p-dialog-footer {
    background: transparent !important;
    border-top: 1px solid rgba(255, 255, 255, 0.1) !important;
    padding: 1.5rem !important;
  }
}

/* Divider */
::ng-deep .p-divider {
  &.p-divider-horizontal {
    &::before {
      border-top: 1px solid rgba(255, 255, 255, 0.1) !important;
    }
  }
}

/* Buttons */
::ng-deep .p-button {
  font-weight: 700;
  transition: all 0.3s ease;

  &.p-button-success {
    background: linear-gradient(135deg, #4caf50, #66bb6a) !important;
    border: none !important;
    box-shadow: 0 4px 12px rgba(76, 175, 80, 0.3);

    &:hover:not(:disabled) {
      transform: translateY(-2px);
      box-shadow: 0 6px 16px rgba(76, 175, 80, 0.4);
    }
  }

  &.p-button-warning {
    background: linear-gradient(135deg, #ff9800, #ffb74d) !important;
    border: none !important;
    color: #ffffff !important;
    box-shadow: 0 2px 8px rgba(255, 152, 0, 0.3);

    &:hover:not(:disabled) {
      transform: translateY(-1px);
      box-shadow: 0 4px 12px rgba(255, 152, 0, 0.4);
      background: linear-gradient(135deg, #ffb74d, #ffc107) !important;
    }
  }

  &.p-button-danger {
    background: linear-gradient(135deg, #f44336, #ef5350) !important;
    border: none !important;
    color: #ffffff !important;
    box-shadow: 0 2px 8px rgba(244, 67, 54, 0.3);

    &:hover:not(:disabled) {
      transform: translateY(-1px);
      box-shadow: 0 4px 12px rgba(244, 67, 54, 0.4);
      background: linear-gradient(135deg, #ef5350, #e57373) !important;
    }
  }

  &.p-button-secondary {
    background: rgba(255, 255, 255, 0.1) !important;
    border: 2px solid rgba(255, 255, 255, 0.3) !important;
    color: #fff !important;

    &:hover:not(:disabled) {
      background: rgba(255, 255, 255, 0.15) !important;
    }
  }

  &:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }
}

/* Confirm Dialog */
::ng-deep .p-confirm-dialog {
  .surface-overlay {
    background: linear-gradient(
      135deg,
      rgba(30, 60, 114, 0.95) 0%,
      rgba(42, 82, 152, 0.95) 100%
    ) !important;
    backdrop-filter: blur(20px);
  }

  .bg-primary {
    background: var(--primary-500) !important;
  }

  .font-bold,
  p {
    color: #fff !important;
  }
}

/* Empty State */
.empty-state {
  padding: 3rem 2rem;
  
  .empty-icon {
    font-size: 4rem;
    color: rgba(255, 255, 255, 0.3);
    margin-bottom: 1rem;
  }
  
  .empty-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: #fff;
    margin: 1rem 0 0.5rem 0;
  }
  
  .empty-subtitle {
    color: rgba(255, 255, 255, 0.7);
    font-size: 1rem;
    margin-bottom: 1.5rem;
  }
  
  .text-muted {
    color: rgba(255, 255, 255, 0.6);
    font-size: 0.875rem;
  }
}

/* Highlighted Row Animation */
.highlighted-row {
  animation: highlight 2s ease-out;
  background: rgba(76, 175, 80, 0.2) !important;
}

@keyframes highlight {
  0% {
    background: rgba(76, 175, 80, 0.4) !important;
    transform: scale(1.02);
  }
  100% {
    background: rgba(76, 175, 80, 0.2) !important;
    transform: scale(1);
  }
}

/* Form Validation Styles */
.p-error {
  color: #ff6b6b !important;
  font-size: 0.75rem;
  margin-top: 0.25rem;
  display: block;
}

.p-invalid {
  border-color: #ff6b6b !important;
  
  &:focus {
    border-color: #ff6b6b !important;
    box-shadow: 0 0 0 3px rgba(255, 107, 107, 0.2) !important;
  }
}

.tooltip-icon {
  font-size: 0.875rem;
  color: rgba(255, 255, 255, 0.6);
  cursor: help;
  
  &:hover {
    color: rgba(255, 255, 255, 0.9);
  }
}

/* Responsive */
@media (max-width: 768px) {
  .tables-container {
    padding: 1rem;
  }

  ::ng-deep .p-card {
    .p-card-header {
      font-size: 1.25rem;
      padding: 1rem !important;
    }
  }

  ::ng-deep .p-datatable {
    font-size: 0.875rem;

    .p-datatable-thead > tr > th,
    .p-datatable-tbody > tr > td {
      padding: 0.75rem !important;
    }
  }
}
/* Placeholder Styles - Better Visibility */
::placeholder {
  color: rgba(255, 255, 255, 0.5) !important;
  opacity: 1 !important;
}

::-webkit-input-placeholder {
  color: rgba(255, 255, 255, 0.5) !important;
  opacity: 1 !important;
}

::-moz-placeholder {
  color: rgba(255, 255, 255, 0.5) !important;
  opacity: 1 !important;
}

:-ms-input-placeholder {
  color: rgba(255, 255, 255, 0.5) !important;
  opacity: 1 !important;
}
